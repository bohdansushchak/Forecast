<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Weather Location">

        <SwitchPreference
                android:key="USE_DEVICE_LOCATION"
                android:title="Use device location"
                android:summary="Allow the app to use location"
                android:defaultValue="true"
                android:disableDependentsState="true"/>
    </PreferenceCategory>

    <EditTextPreference
            android:key="CUSTOM_LOCATION"
            android:title="Location"
            android:summary="The location for witch the weather is displayed"
            android:defaultValue="Rzeszow"
            android:dependency="USE_DEVICE_LOCATION"
            android:negativeButtonText="Cancel"
            android:positiveButtonText="Ok"/>

    <PreferenceCategory
            android:title="Units">

        <ListPreference
                android:key="UNIT_SYSTEM"
                android:title="Unit system"
                android:summary="%s"
                android:defaultValue="METRIC"
                android:entries="@array/unitSystemEntries"
                android:entryValues="@array/unitSystemValue"
                android:negativeButtonText="Cancel"/>

    </PreferenceCategory>

</PreferenceScreen>